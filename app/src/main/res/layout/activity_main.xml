<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <Button
            android:id="@+id/requestCamera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Request camera"/>
        <Button
            android:id="@+id/requestCall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Request call"/>
        <Button
            android:id="@+id/requestReadContacts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Request read contacts"/>
        <Button
            android:id="@+id/requestPostNotification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Request post notification"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>